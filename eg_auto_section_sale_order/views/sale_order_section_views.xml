<odoo>
    <record id="sale_order_section_tree_view" model="ir.ui.view">
        <field name="name">sale.order.section.tree.view</field>
        <field name="model">sale.order.section</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="sale_order_section_form_view" model="ir.ui.view">
        <field name="name">sale.order.section.form.view</field>
        <field name="model">sale.order.section</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sale_section_action" model="ir.actions.act_window">
        <field name="name">Sale Order Section</field>
        <field name="res_model">sale.order.section</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="sale_section_menu"
              name="Sale Order Section"
              parent="sale.menu_sales_config"
              action="sale_section_action"
              sequence="20"/>

</odoo>

